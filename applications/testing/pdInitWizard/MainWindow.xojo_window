#tag Events initSystemUsers_btn
	#tag Event
		Sub Action()
		  
		  dim db as new PostgreSQLDatabase
		  
		  db.Host = hostname.Text
		  db.Port = 5432
		  db.DatabaseName = "postgres"
		  db.UserName = "postgres"
		  db.Password = postgres_password.Text
		  
		  dim outcome as pdOutcome = pdinit.initSystemUsers(db , pdadmin_password.Text , pdbackend_password.Text)
		  
		  if outcome.ok = true then
		    MsgBox "OK"
		  Else
		    MsgBox outcome.warnings(0)
		  end if
		  
		  
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events initDatabase_btn
	#tag Event
		Sub Action()
		  
		  dim db as new PostgreSQLDatabase
		  
		  db.Host = hostname.Text
		  db.Port = 5432
		  db.DatabaseName = "postgres"
		  db.UserName = "postgres"
		  db.Password = empty
		  
		  dim root as new FolderItem(tablespaceRootPath.Text)
		  
		  dim outcome as pdOutcome = pdinit.initDatabase(db , dbname.Text , root , characterType.Text , collation.Text)
		  
		  if outcome.ok = true then
		    MsgBox "OK"
		  Else
		    MsgBox outcome.fatalErrorMsg + EndOfLine + Join(outcome.warnings , EndOfLine)
		  end if
		  
		  
		End Sub
	#tag EndEvent
#tag EndEvents
